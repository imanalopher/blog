<% content_for :body do %>
    <h1>Listing articles</h1>

    <table>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3"></th>
      </tr>

      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Destroy', article_path(article),
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
    <%= paginate @articles %>
    <p>
      <%= link_to 'Create new Article', new_article_path %>
    </p>
<% end %>